<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/gpio_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="120" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/request_gpio_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Request gpio" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/set_gpio_in_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="set gpio input" />

        <Button
            android:id="@+id/set_gpio_out_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="set gpio output" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/read_gpio_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="read" />

        <TextView
            android:id="@+id/read_gpio_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/write_gpio_0_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="write gpio 0" />

        <Button
            android:id="@+id/write_gpio_1_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="write gpio 1" />

        <TextView
            android:id="@+id/write_gpio_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <Button
            android:id="@+id/free_gpio_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="free gpio" />
    </LinearLayout>

</LinearLayout>